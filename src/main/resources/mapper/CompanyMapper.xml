<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.hqu.elevatorManage.mapper.CompanyMapper">

    <resultMap id="BaseResultMap" type="org.hqu.elevatorManage.domain.vo.CompanyVO">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="companyId" column="company_id" jdbcType="VARCHAR"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="address" column="address" jdbcType="VARCHAR"/>
        <result property="regionId" column="region_id" jdbcType="VARCHAR"/>
        <result property="state" column="state" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="postalCode" column="postal_code" jdbcType="VARCHAR"/>
        <result property="contactInfo" column="contact_info" jdbcType="VARCHAR"/>
        <result property="manager" column="manager" jdbcType="VARCHAR"/>
        <result property="provinceId" column="province_id" jdbcType="VARCHAR"/>
        <result property="cityId" column="city_id" jdbcType="VARCHAR"/>
        <result property="districtId" column="district_id" jdbcType="VARCHAR"/>
        <result property="townId" column="town_id" jdbcType="VARCHAR"/>
    </resultMap>
    
    <sql id="Base_Column_List">
        c.id, company_id, name, address, c.region_id, state, type, postal_code, contact_info, manager
    </sql>
    <sql id="Ext_Column_List">
        , province_id, city_id, district_id , town_id
    </sql>

    <select id="listCompanies" resultMap="BaseResultMap">
        SELECT
        <include refid="Base_Column_List"/>
        <include refid="Ext_Column_List"/>
        FROM company AS c
        JOIN region r on r.region_id = c.region_id
        <where>
            <if test="id != null">
                AND c.id = #{id,jdbcType=INTEGER}
            </if>
            <if test="companyId != null">
                AND company_id = #{companyId,jdbcType=VARCHAR}
            </if>
            <if test="name != null">
                AND name = #{name,jdbcType=VARCHAR}
            </if>
            <if test="address != null">
                AND address = #{address,jdbcType=VARCHAR}
            </if>
            <if test="regionId != null">
                AND c.region_id = #{regionId,jdbcType=VARCHAR}
            </if>
            <if test="state != null">
                AND state = #{state,jdbcType=INTEGER}
            </if>
            <if test="type != null">
                AND type = #{type,jdbcType=VARCHAR}
            </if>
            <if test="postalCode != null">
                AND postal_code = #{postalCode,jdbcType=VARCHAR}
            </if>
            <if test="contactInfo != null">
                AND contact_info = #{contactInfo,jdbcType=VARCHAR}
            </if>
            <if test="manager != null">
                AND manager = #{manager,jdbcType=VARCHAR}
            </if>
            <if test="provinceId != null">
                AND province_id = #{provinceId,jdbcType=VARCHAR}
            </if>
            <if test="cityId != null">
                AND city_id = #{cityId,jdbcType=VARCHAR}
            </if>
            <if test="districtId != null">
                AND district_id = #{districtId,jdbcType=VARCHAR}
            </if>
            <if test="townId != null">
                AND town_id = #{townId,jdbcType=VARCHAR}
            </if>
        </where>
    </select>

    <insert id="addCompany" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO company
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="companyId != null">company_id,</if>
            <if test="name != null">name,</if>
            <if test="address != null">address,</if>
            <if test="regionId != null">region_id,</if>
            <if test="state != null">state,</if>
            <if test="type != null">type,</if>
            <if test="postalCode != null">postal_code,</if>
            <if test="contactInfo != null">contact_info,</if>
            <if test="manager != null">manager,</if>
        </trim>
        VALUES
        <trim prefix="(" suffix=")" suffixOverrides=",">
           <if test="id != null">
               #{id,jdbcType=INTEGER},
           </if>
           <if test="companyId != null">
               #{companyId,jdbcType=VARCHAR},
           </if>
           <if test="name != null">
               #{name,jdbcType=VARCHAR},
           </if>
           <if test="address != null">
               #{address,jdbcType=VARCHAR},
           </if>
           <if test="regionId != null">
               #{regionId,jdbcType=VARCHAR},
           </if>
           <if test="state != null">
               #{state,jdbcType=INTEGER},
           </if>
           <if test="type != null">
               #{type,jdbcType=VARCHAR},
           </if>
           <if test="postalCode != null">
               #{postalCode,jdbcType=VARCHAR},
           </if>
           <if test="contactInfo != null">
               #{contactInfo,jdbcType=VARCHAR},
           </if>
           <if test="manager != null">
               #{manager,jdbcType=VARCHAR},
           </if>
        </trim>
    </insert>

    <update id="updateCompany">
        UPDATE company
        <set>
            <if test="companyId != null and companyId != ''">
                company_id = #{companyId,jdbcType=VARCHAR},
            </if>
            <if test="name != null and name != ''">
                name = #{name,jdbcType=VARCHAR},
            </if>
            <if test="address != null and address != ''">
                address = #{address,jdbcType=VARCHAR},
            </if>
            <if test="regionId != null and regionId != ''">
                region_id = #{regionId,jdbcType=VARCHAR},
            </if>
            <if test="state != null">
                state = #{state,jdbcType=INTEGER},
            </if>
            <if test="type != null and type != ''">
                type = #{type,jdbcType=VARCHAR},
            </if>
            <if test="postalCode != null and postalCode != ''">
                postal_code = #{postalCode,jdbcType=VARCHAR},
            </if>
            <if test="contactInfo != null and contactInfo != ''">
                contact_info = #{contactInfo,jdbcType=VARCHAR},
            </if>
            <if test="manager != null and manager != ''">
                manager = #{manager,jdbcType=VARCHAR},
            </if>
        </set>
        WHERE id = #{id,jdbcType=INTEGER}
    </update>

    <delete id="deleteCompanyById">
        DELETE
        FROM company
        WHERE company_id = #{id,jdbcType=VARCHAR}
    </delete>

</mapper>

